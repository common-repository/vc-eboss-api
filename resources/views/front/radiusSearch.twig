<style type="text/css">
	#loader{
		display: none;
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
			<form action="{{ resultPage }}" name="job-search" method="POST" role="form">
				<input type="hidden" name="search-type" id="search-type" value="radius-search">

				<div class="form-group">
					<label for="postal-code">Post Code</label>
					<input type="text" class="form-control" id="postal-code" name="postal-code" placeholder="Enter post code">
				</div>

				<div class="form-group">
					<label for="mile-radius">Mile Radius</label>
					<input type="text" name="mile-radius" id="mile-radius" class="form-control" placeholder="Enter mile radius">
				</div>

				<button type="submit" class="btn btn-primary btn-lg pull-right">Search</button>
			</form>
			<br/>	<br/>
			<label id="loader" class="pull-left"> <img src="{{assetsUrl}}" /> Please wait while loading...</label>
		</div>
	</div>
</div>